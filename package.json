{
  "name": "dsf-wegbot2",
  "version": "2.0.0",
  "description": "Modbot for Dallas Sports Fam discord",
  "license": "GPL-3.0",
  "author": "Shawn Lutch <shawn@chaoticweg.cc> (https://chaoticweg.cc)",
  "private": true,
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn run type-check -- --watch",

    "build": "yarn run build:types && yarn run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts\" --source-maps inline",

    "test": "jest --setupFiles dotenv/config",
    "test:coverage": "jest --coverage --setupFiles dotenv/config",
    "coveralls": "yarn run test:coverage && cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "@types/dotenv": "^6.1.0",
    "discord.js": "^11.4.2",
    "dotenv": "^7.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.3",
    "babel-jest": "^24.5.0",
    "coveralls": "^3.0.3",
    "jest": "^24.5.0",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "main": "./app.js",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
